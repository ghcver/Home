<Window x:Class="WpfApplication6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication6"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="190" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <DockPanel LastChildFill="True">
            <Button x:Name="button" DockPanel.Dock="Bottom" Content="Start" VerticalAlignment="Bottom" Height="38" Click="button_Click" FontSize="16"/>
            <TextBox x:Name="textBox" DockPanel.Dock="Top" TextWrapping="Wrap" Margin="0,0,0,10" VerticalScrollBarVisibility="Visible" FontSize="16" IsReadOnly="True" />
        </DockPanel>
    </Grid>
</Window>
